<%- model_class = Movie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:language) %></th>
      <th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:rt_rating) %></th>
      <th><%= model_class.human_attribute_name(:imdb_rating) %></th>
      <th><%= model_class.human_attribute_name(:image_uri) %></th>
      <th><%= model_class.human_attribute_name(:producer_id) %></th>
      <th><%= model_class.human_attribute_name(:director_id) %></th>
      <th><%= model_class.human_attribute_name(:screenwriter_id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.id, movie_path(movie) %></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.language %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.summary %></td>
        <td><%= movie.rt_rating %></td>
        <td><%= movie.imdb_rating %></td>
        <td><%= movie.image_uri %></td>
        <td><%= movie.producer_id %></td>
        <td><%= movie.director_id %></td>
        <td><%= movie.screenwriter_id %></td>
        <td><%= movie.description %></td>
        <td><%=l movie.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_movie_path(movie), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      movie_path(movie),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_movie_path,
            :class => 'btn btn-primary' %>
