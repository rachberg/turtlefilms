<%- model_class = Movie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @movie.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @movie.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language) %>:</strong></dt>
  <dd><%= @movie.language %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genre) %>:</strong></dt>
  <dd><%= @movie.genre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @movie.summary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rt_rating) %>:</strong></dt>
  <dd><%= @movie.rt_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imdb_rating) %>:</strong></dt>
  <dd><%= @movie.imdb_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_uri) %>:</strong></dt>
  <dd><%= @movie.image_uri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:producer_id) %>:</strong></dt>
  <dd><%= @movie.producer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:director_id) %>:</strong></dt>
  <dd><%= @movie.director_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:screenwriter_id) %>:</strong></dt>
  <dd><%= @movie.screenwriter_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @movie.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              movies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_movie_path(@movie), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              movie_path(@movie),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
